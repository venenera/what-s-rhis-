#include <iostream>
using namespace std;

int GlobalVar;

void Global()
{
	while (GlobalVar < 10) {
	    cout << "Глобальная переменная вызывалась: " << GlobalVar++ << " раз" << endl;
	}
	Global();
}

void Local()
{
	static int LocalVar = 0;	
	cout << "Локальная статическая переменная вызывалась : " << LocalVar++ << "раз" << endl;
	while (GlobalVar < 10) {
	    cout << "Глобальная переменная вызывалась: " << GlobalVar++ << " раз" << endl;
	}
	Local();
}

int main()
{
	setlocale(LC_ALL, "");
	GlobalVar = 0;
	Global();
	
	Local();
	return 0;
}

