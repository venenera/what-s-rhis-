#include  <iostream>
#include <string>
#include <sstream>
using namespace std;

class Money
{
private:
	long double SUM;
public:
	string ldtoms(long double sum) {
		if (sum > 9999999999999990.00) return "Ошибка ввода";
		ostringstream string_sum;
		string_sum << fixed << sum;
		string ustring = string_sum.str();
		string newstringsum = "$";
		int l, k;
		for (i = 0; i < ustring.length() && (ustring[i] == '0' || ustr[i] == '.'); i++);
		    if (i > 1 && ustring[i - 1] == '.') i = i - 2;
		if (i == ustring.length()) return "$0,00";
		for (k = ustring.length() - 1; k >= 0 && ustring[k] != '.'; j--);
		    k += 2;
		for (; i <= k; i++) {
			if (i != 0 && i < k - 2 && (k - i + 1) % 3 == 0) 
				newstringsum += '.';
			newstringsum += ustring[i] == '.' ? ',' : ustring[i];
		}
		return newstringsum;
	}
};

int main() {
	setlocale(LC_ALL, "");
	Money money;
	long double sum;
	cout << "Введите число (тип long double): ";
	cin >> sum;
	cout << "Денежная строка: " << money.ldtoms(sum) << endl;
	return 0;
}
