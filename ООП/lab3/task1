#include <iostream>
using namespace std;

struct phone {
    int area;
    int exchange;
    int number;
};

int main()
{
    setlocale(LC_ALL, "rus");
    phone ph1 = {212, 767, 8900};
    phone ph2;
    
    cout << "Введите код города ";
    cin >> ph2.area >>ph2.exchange >> ph2.number;
    
    cout << "\nМой номер " 
    << "(" << ph1.area << ")"
    << ph1.exchange << "-" << ph1.number;
    
    cout << "\nМой номер " 
    << "(" << ph2.area << ")"
    << ph2.exchange << "-" << ph2.number;

    return 0;
}
